<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".Main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/topictext"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:text="WELCOME TO "
            android:textSize="25dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/colorPrimaryDark"

            />

        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/topictext"
            android:id="@+id/topictextsub"
            android:layout_marginBottom="50dp"
            android:text="Travel Guide Application"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"

            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topictextsub"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Enter fields below to login"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
             />

        <EditText
            android:id="@+id/emailog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"

            android:layout_below="@+id/textView5"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/passlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailog"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:hint="Password"
            android:ems="10"
            android:textSize="22sp"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/buttonlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:layout_below="@+id/passlog"
            android:text="Sign In" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_height="wrap_content"
            android:text="Don't have an account? sign up"
            android:textColor="@android:color/background_dark"
            android:layout_below="@+id/buttonlogin"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/linktosignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="here"
            android:layout_toRightOf="@+id/textView"
            android:layout_below="@+id/buttonlogin"
            android:layout_marginLeft="5dp"
            android:textColor="#0b5b76"
            android:textSize="16sp" />
    </RelativeLayout>




</ScrollView>